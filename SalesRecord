import java.time.LocalDate;
import java.time.LocalTime;
//This class lists all the necessary attributes.
public class SalesRecord {

    private static int idCounter = 0; 
    private int productId;
    private String custName;
    private String salesperson;
    private String productName;
    private LocalDate dateOfSales;  
    private LocalTime timeOfOrder;  
    private int amtSold;
    private double discount;
    private double totalSales;  
    
    //This is the constructor for SalesRecord.
    public SalesRecord(String custName, String salesperson, String productName, LocalDate dateOfSales, 
                       LocalTime timeOfOrder, int amtSold, double discount, double totalSales) {
    //Initialization of the attributes.
        this.productId = generateProductId();  
        this.custName = custName;
        this.salesperson = salesperson;
        this.productName = productName;
        this.dateOfSales = dateOfSales;
        this.timeOfOrder = timeOfOrder;
        this.amtSold = amtSold;
        this.discount = discount;
        this.totalSales = totalSales;
    }

    //This method is used to generate a unique product ID using an incremental counter.
    private static int generateProductId() {
        idCounter++;  
        return idCounter;
    }

    //These are getters.
    public int getProductId() {
        return productId;
    }

    public String getCustName() {
        return custName;
    }

    public String getSalesperson() {
        return salesperson;
    }

    public String getProductName() {
        return productName;
    }

    public LocalDate getDateOfSales() {
        return dateOfSales;
    }

    public LocalTime getTimeOfOrder() {
        return timeOfOrder;
    }

    public int getAmtSold() {
        return amtSold;
    }

    public double getDiscount() {
        return discount;
    }

    public double getTotalSales() {
        return totalSales;
    }

}
